{
  "name": "lum/simpledom",
  "type": "library",
  "description": "A bridge between SimpleXML and the DOM extension.",
  "homepage": "https://github.com/supernovus/simpledom",
  "license": "MIT",
  "authors":
  [
    {
      "name": "Google Code Archive",
      "homepage": "https://code.google.com/archive/p/simpledom/",
      "role": "Original Author"
    },
    {
      "name": "Timothy Totten",
      "role": "Current Maintainer"
    }
  ],
  "require":
  {
    "php": "^7.4 || ^8.0",
    "ext-xml": "*",
    "ext-dom": "*",
    "ext-SimpleXML": "*"
  },
  "require-dev":
  {
    "phpunit/phpunit": "^9.0"
  },
  "suggest":
  {
    "lum/simpledom-functional": "The simpledom_*() global functions for legacy code.",
    "ext-xsl": "The 'xsl' extension will enable the XSLT() method."
  },
  "autoload":
  {
    "classmap": ["lib/SimpleDOM.php"]
  },
  "extra":
  {
    "branch-alias":
    {
      "dev-main": "3.x-dev"
    }
  }
}